package com.cognizant.pms.dailyshareprice.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.cognizant.pms.dailyshareprice.model.ShareDetails;

public interface ShareRepository extends JpaRepository<ShareDetails, String> {
	public List<ShareDetails> findAll();

//	@Query("SELECT s FROM ShareDetails s WHERE s.shareId IN (:shareID) order by s.shareId")
//	public List<ShareDetails> findByShareId(@Param("shareID") List<String> shareId);
	
	@Query(value = "SELECT * FROM share_details s WHERE s.share_id= :shareId ORDER BY s.share_Id", nativeQuery = true)
	public List<ShareDetails> findByShareId(String shareId);

}
